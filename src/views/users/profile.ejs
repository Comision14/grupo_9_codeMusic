<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="profile">
        <%- include('../partials/header') %>
            <main class="profile_main">

                <section class="profile_main_section">

                    <h3>Mi perfil </h3>
                    
                    <img src="<%="/img/users/default-users-image.jpg"%>" alt="usuario" class="profile_img">
                    <div class="profile_main_divAvatar">
                        <label for="avatar" style="cursor:pointer;" class="profile_main_divAvatar_label">Cambiar imagen de perfil</label>
                        <input hidden type="file" id="avatar" name="avatar">
                    </div>

                    <form class="profile_main_form" action="/users/profile?_method=PUT" method="post" enctype="multipart/form-data">
                        <div class="profile_main_form_div1">

                            <div>
                                <label for="nombre">Nombre</label>
                                <input type="text" name="firstName" id="nombre" placeholder="Escribí tu nombre" class="profile_controls" value="<%= user.firstName %>">
                            </div>

                            <div>
                                <label for="apellido">Apellido</label>
                                <input type="text" name="lastName" id="nombre" placeholder="Escribí tu apellido" class="profile_controls" value="<%= user.lastName %>">
                            </div>

                            <div>
                                <label for="usuario">Nombre de usuario</label>
                                <input type="text" name="username" id="usuario"
                                    placeholder="Escribí tu nombre de usuario" class="profile_controls">
                            </div>

                            <div>
                                <label for="email">Correo electrónico</label>
                                <input type="email" name="email" id="email" placeholder="Escribí tu correo electrónico" class="profile_controls"
                                value="<%= user.email %>" disabled >
                            </div>
                            <div >
                                <label for="Telefono">Teléfono(opcional):</label>
                                <input type="number" name="telephone" id="Telefono" placeholder="Ej: 1524647589" class="profile_controls" value="<%= user.telephone %>" >
                                <% if (locals.errors && errors.telephone) { %>
                                  <p class="register_errors">
                                    <%= errors.telephone.msg %> 
                                </p>
                                <% } %>
                            </div>
                            <div>
                                <label for="category">Categoría</label>
                                <input type="text" name="category" id="category" placeholder="Escribí tu correo electrónico" class="profile_controls"
                                value="<%= user.category %>" disabled >
                            </div>

                        </div>

                        <div class="profile_main_form_div2">
                            <h5>Género</h5>
                            <hr>
                            <div>
                                <input value="f" type="radio" id="femenino" name="genero">
                                <label for="femenino">Femenino</label>
                            </div>

                            <div>
                                <input value="m" type="radio" id="masculino" name="genero">
                                <label for="masculino">Masculino</label>
                            </div>

                            <div>
                                <input value="o" type="radio" id="otro" name="genero">
                                <label for="otro">Otro</label>
                            </div>

                        </div>

                        <div class="profile_main_form_div3">
                            <h5>Géneros de música favoritos</h5>
                            <hr>
                            <div>
                                <input value="Rock" type="checkbox" id="Rock" name="musicaFav">
                                <label for="Rock">Rock</label>
                            </div>
                            <div>
                                <input value="Jazz" type="checkbox" id="Jazz" name="musicaFav">
                                <label for="Jazz">Jazz</label>
                            </div>
                            <div>
                                <input value="Clásica" type="checkbox" id="Clásica" name="musicaFav">
                                <label for="Clásica">Música Clásica</label>
                            </div>
                            <div>
                                <input value="Pop" type="checkbox" id="Pop" name="musicaFav">
                                <label for="Pop">Pop</label>
                            </div>
                        </div>

                        <div class="profile_main_form_div4">
                            <h5>Domicilio</h5>
                            <hr>
                            <div>
                                <label for="provincia">Selecciona tu provincia</label>
                                <select name="provincia" id="provincia" class="profile_controls">
                                    <option value="" hidden selected>Selecciona tu provincia</option>
                                    <option value="Buenos Aires">Buenos Aires</option>
                                    <option value="Corrientes">Corrientes</option>
                                    <option value="Entre Ríos">Entre Ríos</option>
                                    <option value="Misiones">Misiones</option>
                                    <option value="Santa Fé">Santa Fé</option>
                                    <option value="Tucuman">Tucuman</option>
                                    <option value="Mendoza">Mendoza</option>
                                    <option value="Jujuy">Jujuy</option>
                                    <option value="Catamarca">Catamarca</option>
                                    <option value="Chaco">Chaco</option>
                                    <option value="La Rioja">La Rioja</option>
                                    <option value="San Luis">San Luis</option>
                                    <option value="San Juan">San Juan</option>
                                    <option value="Córdoba">Córdoba</option>
                                    <option value="Neuquén">Neuquén</option>
                                    <option value="Chubut">Chubut</option>
                                    <option value="Tucumán">Tucumán</option>
                                    <option value="Santa Cruz">Santa Cruz</option>
                                    <option value="Tierra del Fuego">Tierra del Fuego</option>
                                    <option value="Río Negro">Río Negro</option>
                                    <option value="Salta">Salta</option>
                                    <option value="Santiago del Estero">Santiago del Estero</option>
                                    <option value="provincia de buenos aires"></option>
                                </select>
                            </div>
                            
                            <div>
                                <label for="localidad">Localidad</label>
                                <input type="text" id="localidad" name="localidad" placeholder="Ej: San Miguel" class="profile_controls">
                            </div>

                            <div>
                                <label for="calle">Calle y altura</label>
                                <input type="text" id="calle" name="calle" placeholder="Ej: Calle 123" class="profile_controls">
                            </div>

                            <div>
                                <label for="biografia">Acerca de mí</label>
                                <textarea name="biografia" id="biografia" cols="30" rows="5" class="profile_controls_textarea"></textarea>

                            </div>

                            <div>
                                <button type="button" class="profile_main_form_button"><a href="/">Cancelar</a></button>
                                <button type="submit" class="profile_main_form_button" style="cursor:pointer ;">Guardar cambios</button>
                            </div>
                        </div>
                    </form>

                </section>

            </main>
            <!-- copie y pegue el footer y se soluciono -->
            <%- include('../partials/footer') %>
    </body>

</html>